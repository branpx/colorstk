#:import App kivy.app
#:import Factory kivy.factory.Factory


<PalettesScreen>:
    orientation: 'vertical'

    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    ActionBar:
        ActionView:
            ActionPrevious:
                title: 'Palettes'
                with_previous: False
                on_release: Factory.ScreenMenu().open()
            ActionButton:
                text: 'New'
                on_release: Factory.NewPalettePopup(root).open()

    ScrollView:
        StackLayout:
            id: palette_stack
            size_hint_min_x: '200dp'
            size_hint_y: None
            height: self.minimum_height
            padding: '25dp', '25dp'
            spacing: '25dp'
            palettes_screen: root


<ColorsScreen>:
    orientation: 'vertical'

    ActionBar:
        ActionView:
            ActionPrevious:
                title: 'Colors'
                on_release: App.get_running_app().root.current = 'palettes'


<Palette>:
    cols: 1
    size_hint: None, None
    size: '150dp', '175dp'
    title_size: '15dp'

    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Widget:
        size_hint_y: None
        height: '100dp'
    Label:
        text: root.name
    Label:
        color: 0.7, 0.7, 0.7, 1
        text: str(len(root.colors)) + ' colors'



<NewPalettePopup>:
    title: 'Palette Name'
    size_hint: None, None
    size: '200dp', '90dp'

    TextInput:
        id: name_input
        size_hint_y: None
        height: '30dp'
        cursor_color: 0, 0, 0, 1
        multiline: False
        write_tab: False
