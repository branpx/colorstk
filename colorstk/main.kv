#:import App kivy.app.App
#:import Factory kivy.factory.Factory


<AboutPopup>:
    title: 'About'
    size_hint: 0.6, 0.8

    TextInput:
        text:
            """Colors Toolkit\n
            Copyright (c) 2017 Brandon Piatt\n
            """
        foreground_color: 1, 1, 1, 1
        background_color: 0, 0, 0, 0
        cursor_color: 0, 0, 0, 0
        readonly: True


<SettingsPopup>:
    orientation: 'vertical'

    ActionBar:
        ActionView:
            ActionPrevious:
                title: 'Settings'
                on_release: App.get_running_app().settings_popup.dismiss()


<OptionsTogglePopup>:
    size_hint: 0.6, 0.8
    ScrollView:
        GridLayout:
            id: toggle_button_grid
            cols: 1
            size_hint_y: None
            height: self.minimum_height


<ScreenMenu@ModalView>:
    pos_hint: {'x': 0, 'y': 0}
    size_hint_x: None
    width: '300dp'
    background: ''

    screen_manager: App.get_running_app().root

    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1

        ScreenMenuItem:
            text: 'Lookup'
            on_release: root.screen_manager.current = 'lookup'; root.dismiss()
        ScreenMenuItem:
            text: 'Palettes'
            on_release: root.screen_manager.current = 'palettes'; root.dismiss()
        ScreenMenuItem:
            text: 'Settings'
            on_release: App.get_running_app().open_settings(); root.dismiss()
        ScreenMenuItem:
            text: 'About'
            on_release: Factory.AboutPopup().open(); root.dismiss()


<ScreenMenuItem@Button>:
    size_hint_y: None
    height: '50dp'
