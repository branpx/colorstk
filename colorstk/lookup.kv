#:import Factory kivy.factory.Factory


<LookupScreen>:
    knsname: 'lookup_screen'
    orientation: 'vertical'

    ActionBar:
        ActionView:
            ActionPrevious:
                title: 'Lookup'
                with_previous: False
                on_release: Factory.ScreenMenu().open()
            ActionButton:
                text: 'Add to palette'
                on_release: root.add_to_palette()
            ActionSeparator:
            ActionButton:
                id: prev_button
                text: 'Prev'
                disabled: True
                on_release: root.previous_color()
            ActionButton:
                id: next_button
                text: 'Next'
                disabled: True
                on_release: root.next_color()

    BoxLayout:
        padding: '20dp'

        canvas:
            Color:
                rgba: root.color
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            GridLayout:
                id: value_grid
                cols: 1
                size_hint: None, None
                width: self.minimum_width
                height: self.minimum_height
                spacing: '50dp'
                padding: 0, '25dp'

        TabbedPanel:
            do_default_tab: False
            tab_height: '30dp'

            TabbedPanelItem:
                text: 'Info'

                ScrollView:
                    GridLayout:
                        cols: 1
                        size_hint: None, None
                        width: self.minimum_width
                        height: self.minimum_height
                        spacing: '25dp'
                        padding: '25dp', '25dp'

                        ColorBox:
                            size: '200dp', '100dp'
                            lookup_screen: root
                            color: root.color

                        InfoLabel:
                            text: 'Color Name: ' + root.color_name

                        InfoLabel:
                            text: 'Websafe: ' + getattr(root.websafe_color, 'html')

                        ColorBox:
                            width: '100dp'
                            lookup_screen: root
                            color: root.websafe_color

                        InfoLabel:
                            text: 'Greyscale: ' + getattr(root.greyscale_color, 'html')

                        ColorBox:
                            width: '100dp'
                            lookup_screen: root
                            color: root.greyscale_color

                        InfoLabel:
                            text: 'Complementary: ' + getattr(root.complementary_color, 'html')

                        ColorBox:
                            width: '100dp'
                            lookup_screen: root
                            color: root.complementary_color

                        InfoLabel:
                            text: 'RYB Hue: ' + str(root.ryb_hue)

            TabbedPanelItem:
                text: 'Schemes'

                ScrollView:
                    GridLayout:
                        cols: 1
                        size_hint: None, None
                        width: self.minimum_width
                        height: self.minimum_height
                        spacing: '25dp'
                        padding: '25dp', '25dp'

                        InfoLabel:
                            text: 'Monochrome Scheme:'

                        SchemeGrid:
                            id: monochrome_grid

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

                        InfoLabel:
                            text: 'Triadic Scheme:'

                        SchemeGrid:
                            id: triadic_grid

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

                        InfoLabel:
                            text: 'Tetradic Scheme:'

                        SchemeGrid:
                            id: tetradic_grid

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

                        InfoLabel:
                            text: 'Analogous Scheme:'

                        SchemeGrid:
                            id: analogous_grid

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

            TabbedPanelItem:
                text: 'Tools'


<ValueDisplay>:
    rows: 1
    size_hint: None, None
    width: self.minimum_width
    height: '30dp'

    Label:
        text: self.parent.color_space
        size_hint_x: None
        width: '75dp'
        font_size: '15dp'


<ValueInput>:
    size_hint_x: None
    width: '60dp'
    font_size: '18dp'
    padding: '5dp', '4dp'
    cursor_color: 0, 0, 0, 1
    multiline: False
    write_tab: False


<TabbedPanelContent>:
    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size


<StripLayout>:
    canvas:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size


<ColorBox>:
    size_hint: None, None
    size: '50dp', '50dp'

    canvas.before:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.pos
            size: self.size

    canvas:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: dp(2)
            joint: 'miter'


<SchemeGrid@GridLayout>:
    rows: 1
    size_hint: None, None
    width: self.minimum_width
    height: self.minimum_height


<InfoLabel@Label>:
    size_hint: None, None
    text_size: None, dp(30)
    size: self.texture_size
    font_size: '15dp'
    valign: 'bottom'
