<LookupScreen>:
    knsname: 'lookup_screen'
    orientation: 'vertical'

    ActionBar:
        ActionView:
            ActionPrevious:
                title: '    Lookup'
                app_icon: 'atlas://' + join(pkg_dir, 'data/theme/menu')
                app_icon_width: '20dp'
                app_icon_height: '20dp'
                with_previous: False
                on_release: Factory.ScreenMenu().open()
            ActionButton:
                text: '%s' % icon('icon_add_color')
                font_size: '24dp'
                markup: True
                on_release: root.add_to_palette()
            ActionButton:
                id: prev_button
                text: '%s' % icon('icon_prev')
                font_size: '24dp'
                markup: True
                disabled: True
                on_release: root.previous_color()
            ActionButton:
                id: next_button
                text: '%s' % icon('icon_next')
                font_size: '24dp'
                markup: True
                disabled: True
                on_release: root.next_color()

    BoxLayout:
        id: content
        padding: '20dp'

        canvas:
            Color:
                rgba: root.color
            Rectangle:
                pos: self.pos
                size: self.size


<ValueView@ScrollView>:
    background_color: 0.1, 0.1, 0.1, 1

    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        id: value_grid
        cols: 1
        size_hint: None, None
        width: self.minimum_width
        height: self.minimum_height
        spacing: '50dp'
        padding: 0, '25dp'


<ValueDisplay>:
    rows: 1
    size_hint: None, None
    width: self.minimum_width
    height: '30dp'

    Label:
        text: self.parent.color_space
        size_hint_x: None
        width: '75dp'
        font_size: '15dp'


<ValueInput>:
    size_hint_x: None
    width: '60dp'
    font_size: '18dp'
    padding: '5dp', '4dp'
    cursor_color: 0, 0, 0, 1
    multiline: False
    write_tab: False


<FullWidthTabbedPanel>:
    background_color: 0.2, 0.2, 0.2, 1
    background_image: ''
    do_default_tab: False
    tab_height: '35dp'


<StripLayout>:
    padding: 0

    canvas:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size


<TabbedPanelHeader>:
    color: (1, 1, 1, 1) if self.state == 'down' else (1, 1, 1, 0.7)
    background_normal: 'atlas://' + join(pkg_dir, 'data/theme/tab_header')
    background_down: 'atlas://' + join(pkg_dir, 'data/theme/tab_header_selected')


<InfoTab@TabbedPanelItem>:
    text: 'Info'

    ScrollView:
        GridLayout:
            cols: 1
            size_hint: None, None
            width: self.minimum_width
            height: self.minimum_height
            spacing: '25dp'
            padding: '25dp'

            ColorBox:
                size: '200dp', '100dp'
                color: knspace.lookup_screen.color

            StackableRow:
                InfoLabel:
                    text: 'Color Name: '
                InfoText:
                    text: knspace.lookup_screen.color_name

            StackableRow:
                InfoLabel:
                    text: 'Websafe: '
                InfoText:
                    text: getattr(knspace.lookup_screen.websafe_color, 'html')

            ColorBox:
                width: '100dp'
                color: knspace.lookup_screen.websafe_color

            StackableRow:
                InfoLabel:
                    text: 'Greyscale: '
                InfoText:
                    text: getattr(knspace.lookup_screen.greyscale_color, 'html')

            ColorBox:
                width: '100dp'
                color: knspace.lookup_screen.greyscale_color

            StackableRow:
                InfoLabel:
                    text: 'Complementary: '
                InfoText:
                    text: getattr(knspace.lookup_screen.complementary_color, 'html')

            ColorBox:
                width: '100dp'
                color: knspace.lookup_screen.complementary_color

            StackableRow:
                InfoLabel:
                    text: 'RYB Hue: '
                InfoText:
                    text: str(knspace.lookup_screen.ryb_hue)


<SchemesTab@TabbedPanelItem>:
    text: 'Schemes'

    ScrollView:
        GridLayout:
            cols: 1
            size_hint: None, None
            width: self.minimum_width
            height: self.minimum_height
            spacing: '25dp'
            padding: '25dp'

            InfoLabel:
                text: 'Monochrome Scheme:'

            StackableRow:
                id: monochrome_grid

                ColorBox:
                ColorBox:
                ColorBox:
                ColorBox:

            InfoLabel:
                text: 'Triadic Scheme:'

            StackableRow:
                id: triadic_grid

                ColorBox:
                ColorBox:

            InfoLabel:
                text: 'Tetradic Scheme:'

            StackableRow:
                id: tetradic_grid

                ColorBox:
                ColorBox:
                ColorBox:

            InfoLabel:
                text: 'Analogous Scheme:'

            StackableRow:
                id: analogous_grid

                ColorBox:
                ColorBox:


<ToolsTab@TabbedPanelItem>:
    text: 'Tools'

    ScrollView:
        GridLayout:
            cols: 1
            size_hint: None, None
            width: self.minimum_width
            height: self.minimum_height
            spacing: '25dp'
            padding: '25dp'

            StackableRow:
                spacing: '30dp'

                canvas:
                    Color:
                        rgba: 0.15, 0.15, 0.15, 1
                    Line:
                        points:
                            self.x+dp(42.5), self.y, self.x+dp(42.5), \
                            self.y-dp(12.5), self.right-dp(42.5), \
                            self.y-dp(12.5), self.right-dp(42.5), self.y
                        width: dp(2)
                    Line:
                        points:
                            self.center_x, self.y-dp(12.5), \
                            self.center_x, self.y-dp(25)
                        width: dp(2)

                ColorSelectBox:
                    id: color_select1
                    width: '85dp'

                ColorSelectBox:
                    id: color_select2
                    width: '85dp'

            Button:
                size_hint: None, None
                size: '200dp', '50dp'
                text: 'Blend colors'
                background_normal: 'atlas://' + join(pkg_dir, 'data/theme/button')
                background_down: 'atlas://' + join(pkg_dir, 'data/theme/button_down')
                on_release: knspace.lookup_screen.blend_colors()

            Button:
                size_hint: None, None
                size: '200dp', '50dp'
                text: 'Random color'
                background_normal: 'atlas://' + join(pkg_dir, 'data/theme/button')
                background_down: 'atlas://' + join(pkg_dir, 'data/theme/button_down')
                on_release: knspace.lookup_screen.random_color()


<ColorBox,ColorSelectBox>:
    size_hint: None, None
    size: '50dp', '50dp'

    canvas.before:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.pos
            size: self.size

    canvas:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: dp(2)
            joint: 'miter'


<StackableRow@GridLayout>:
    rows: 1
    size_hint: None, None
    width: self.minimum_width
    height: self.minimum_height


<InfoLabel@Label>:
    size_hint: None, None
    text_size: None, dp(30)
    size: self.texture_size
    font_size: '15dp'
    valign: 'bottom'


<InfoText@TextInput>:
    size_hint: None, None
    # Set the width to the width of the text.
    width: self._get_text_width(self.text, self.tab_width, self._label_cached)
    height: '30dp'
    font_size: '15dp'
    foreground_color: 1, 1, 1, 1
    background_color: 0, 0, 0, 0
    cursor_color: 0, 0, 0, 0
    padding: 0, '12dp', 0, 0
    multiline: False
    readonly: True
