<LookupScreen>:
    BoxLayout:
        padding: 20

        canvas:
            Color:
                rgba: root.color
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            GridLayout:
                id: value_grid
                cols: 1
                size_hint: None, None
                width: self.minimum_width
                height: self.minimum_height
                spacing: 50
                padding: 0, 25

        TabbedPanel:
            do_default_tab: False
            tab_height: 30

            TabbedPanelItem:
                text: 'General'

                ScrollView:
                    GridLayout:
                        cols: 1
                        size_hint_y: None
                        size_hint_min_x: 250
                        height: self.minimum_height
                        spacing: 25
                        padding: 25, 25

                        Widget:
                            size_hint: None, None
                            size: 100, 50

                            canvas:
                                Color:
                                    rgba: root.color
                                Rectangle:
                                    pos: self.pos
                                    size: self.size

                        InfoLabel:
                            text: 'Color Name: ' + root.color_name

                        InfoLabel:
                            text: 'RYB Hue: '

                        InfoLabel:
                            text: 'Websafe: '

                        InfoLabel:
                            text: 'Greyscale: '

            TabbedPanelItem:
                text: 'Schemes'

            TabbedPanelItem:
                text: 'Tools'


<ValueDisplay>:
    rows: 1
    size_hint: None, None
    width: self.minimum_width
    height: 30

    Label:
        text: self.parent.color_space
        size_hint_x: None
        width: 75


<ValueInput>:
    size_hint_x: None
    width: 60
    font_size: 18
    padding: 5, 4
    cursor_color: 0, 0, 0, 1
    multiline: False
    write_tab: False
    input_filter: 'float'


<TabbedPanelContent>:
    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size


<StripLayout>:
    canvas:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<InfoLabel@Label>:
    size_hint_y: None
    height: 25
    text_size: self.size
    halign: 'left'
    valign: 'center'
