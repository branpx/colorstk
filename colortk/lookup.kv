<LookupScreen>:
    BoxLayout:
        padding: 20

        canvas:
            Color:
                rgba: root.color
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            GridLayout:
                id: value_grid
                cols: 1
                size_hint: None, None
                width: self.minimum_width
                height: self.minimum_height
                spacing: 50
                padding: 0, 25

        TabbedPanel:
            do_default_tab: False
            tab_height: 30

            TabbedPanelItem:
                text: 'Info'

                ScrollView:
                    GridLayout:
                        cols: 1
                        size_hint: None, None
                        width: self.minimum_width
                        height: self.minimum_height
                        spacing: 25
                        padding: 25, 25

                        ColorBox:
                            size: 200, 100
                            lookup_screen: root
                            color: root.color

                        InfoLabel:
                            text: 'Color Name: ' + root.color_name

                        InfoLabel:
                            text: 'Websafe: ' + getattr(root.websafe_color, 'html')

                        ColorBox:
                            width: 100
                            lookup_screen: root
                            color: root.websafe_color

                        InfoLabel:
                            text: 'Greyscale: ' + getattr(root.greyscale_color, 'html')

                        ColorBox:
                            width: 100
                            lookup_screen: root
                            color: root.greyscale_color

                        InfoLabel:
                            text: 'RYB Hue: ' + str(root.ryb_hue)

            TabbedPanelItem:
                text: 'Schemes'

                ScrollView:
                    GridLayout:
                        cols: 1
                        size_hint: None, None
                        width: self.minimum_width
                        height: self.minimum_height
                        spacing: 25
                        padding: 25, 25

                        InfoLabel:
                            text: 'Monochrome Scheme:'

                        SchemeGrid:
                            id: monochrome_grid

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

                        InfoLabel:
                            text: 'Triadic Scheme:'

                        SchemeGrid:
                            id: triadic_grid

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

                        InfoLabel:
                            text: 'Tetradic Scheme:'

                        SchemeGrid:
                            id: tetradic_grid

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

                        InfoLabel:
                            text: 'Analogous Scheme:'

                        SchemeGrid:
                            id: analogous_grid

                            ColorBox:
                                lookup_screen: root

                            ColorBox:
                                lookup_screen: root

            TabbedPanelItem:
                text: 'Tools'


<ValueDisplay>:
    rows: 1
    size_hint: None, None
    width: self.minimum_width
    height: 30

    Label:
        text: self.parent.color_space
        size_hint_x: None
        width: 75


<ValueInput>:
    size_hint_x: None
    width: 60
    font_size: 18
    padding: 5, 4
    cursor_color: 0, 0, 0, 1
    multiline: False
    write_tab: False
    input_filter: 'float'


<TabbedPanelContent>:
    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size


<StripLayout>:
    canvas:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size


<ColorBox>:
    size_hint: None, None
    size: 50, 50

    canvas:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.pos
            size: self.size

    canvas.after:
        Color:
            rgba: 1, 1, 1, 0.25
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 2
            joint: 'miter'


<SchemeGrid@GridLayout>:
    rows: 1
    size_hint: None, None
    width: self.minimum_width
    height: self.minimum_height
    spacing: 5


<InfoLabel@Label>:
    size_hint: None, None
    text_size: None, 30
    size: self.texture_size
    valign: 'bottom'
