<LookupScreen>:
    canvas:
        Color:
            rgba: 0.05, 0.05, 0.05, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Widget:
        size_hint: 0.5, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.85}

        canvas:
            Color:
                rgb: self.parent.srgb[1:]
            Rectangle:
                pos: self.pos
                size: self.size

    Label:
        text: self.parent.color_name
        size_hint: 0.1, 0.1
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}

    ScrollView:
        size_hint: 0.4, 0.5
        pos_hint: {'center_x': 0.3, 'center_y': 0.4}

        canvas.before:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            Rectangle:
                pos: self.pos
                size: self.size

        StackLayout:
            id: value_stack
            size_hint_y: None
            size_hint_min_x: 255
            height: len(self.children) * 80
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            spacing: 50
            padding: 0, 25

            canvas:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

    ScrollView:
        size_hint: 0.4, 0.5
        pos_hint: {'center_x': 0.7, 'center_y': 0.4}

        canvas.before:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            Rectangle:
                pos: self.pos
                size: self.size


<ValueDisplay>:
    size_hint: 1, None
    height: 30

    Label:
        id: value_label
        size_hint_x: None
        width: 75


<ValueInput>:
    size_hint_x: None
    width: 45
    font_size: 21
    padding: 5, 3
    cursor_color: 0, 0, 0, 1
    multiline: False
    write_tab: False
    input_filter: 'float'
